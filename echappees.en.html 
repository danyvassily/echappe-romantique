    <script src="reservation-form.js"></script>
    <script src="echappees-animations.js"></script>
    <script>
        // We will no longer use the dynamic script.js for translation,
        // but we keep other functionalities if they exist.
        // The language change is now handled by simple links.

        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }

            // Function to load the reservation form
            function loadReservationForm() {
                // We target the English version of the form if it exists
                fetch('reservation-form.en.html')
                    .then(response => {
                        if (response.ok) {
                            return response.text();
                        }
                        // Fallback to the default form if the English one is not found
                        return fetch('reservation-form.html').then(res => res.text());
                    })
                    .then(data => {
                        document.getElementById('reservation-form-container').innerHTML = data;
                        // You might need to re-initialize any form-specific JS here
                    })
                    .catch(error => {
                        console.error('Error loading the reservation form:', error);
                        document.getElementById('reservation-form-container').innerHTML = '<p>Error loading booking form. Please try again later.</p>';
                    });
            }

            loadReservationForm();
        });
    </script>

